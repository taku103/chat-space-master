.main-text-box
  .main-title-box
    .main-text-name 
    = message.user.name
    .main-text-time 
    = message.created_at.strftime("%Y年%m月%d日%H時%M分")
  .main-text-message 
    - if message.text.present?
      %p.message-text
        = message.text
    = image_tag message.image.url, class: 'content-message__image' if message.image.present?